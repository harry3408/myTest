<?xml version="1.0" encoding="UTF-8"?>

<project default="main" basedir=".">
	<property name="src" location="src" />
	<property name="conf" location="conf" />
	<property name="lib" location="lib" />
	<property name="web.dir" location="WebContent" />
	<property name="web.lib" location="${web.dir}/WEB-INF/lib" />

	<property name="bulid.dir" location="bulid" />
	<property name="bulid.src" location="${bulid.dir}/classes" />

	<path id="compile.classpath">
		<fileset dir="${web.lib}" includes="*.jar" />
        <fileset dir="${lib}" includes="*.jar" />
	</path>
	<target name="clean">
		<delete dir="${bulid.dir}" />
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${bulid.src}" />
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${bulid.src}" classpathref="compile.classpath" includeantruntime="true" failonerror="true">
		</javac>
		<copy todir="${bulid.src}">
			  <fileset dir="${src}" excludes="*.java" />
			  <fileset dir="${conf}" excludes="*.java" />
		</copy>
	</target>
	<target name="main" depends="compile">
		<echo>${web.lib}</echo>
	</target>
</project>