<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<bean id="jdbcTemplet" class="com.harry.dao.JDBCTemplet" scope="singleton" />

	<bean id="userDao" class="com.harry.dao.UserDao" scope="singleton">
		<Property name="jdbcTemplet" ref="jdbcTemplet" />
	</bean>

	<bean id="userService" class="com.harry.service.UserService" scope="singleton">
		<Property name="userDao" ref="userDao" />
	</bean>

	<bean id="userController" class="com.harry.controller.UserController" scope="singleton">
		<Property name="userService" ref="userService" />
	</bean>
</beans>